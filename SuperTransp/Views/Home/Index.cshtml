@{
	Layout = "";
}
<!DOCTYPE HTML>
<html>
<head>
	<title>Inicio</title>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
	<link rel="stylesheet" href="~/assets/css/main.css" />
	<noscript><link rel="stylesheet" href="~/assets/css/noscript.css" /></noscript>
    <link rel="icon" type="image/x-icon" href="~/images/Logo.ico" />
	<style>
		.logo-container {
			display: flex;
			justify-content: space-between;
			align-items: center;
		}

			.logo-container img {
				display: block;
			}

		.modal {
			position: fixed;
			z-index: 9999;
			left: 0;
			top: 0;
			width: 100%;
			height: 100%;
			overflow: auto;
			background-color: rgba(0,0,0,0.4);
		}

		.modal-content {
			background-color: #fefefe;
			margin: 10% auto;
			padding: 20px;
			border: 1px solid #888;
			width: 400px;
			box-shadow: 0 5px 15px rgba(0,0,0,0.3);
			border-radius: 6px;
		}

		.close {
			color: #aaa;
			float: right;
			font-size: 28px;
			font-weight: bold;
			cursor: pointer;
		}
	</style>
</head>
<body class="is-preload">
	<!-- Wrapper -->
	<div id="wrapper">

		<!-- Header -->
		<header id="header">
			<div class="inner">
				<div class="logo-container">
					<!-- Logo izquierdo -->
					<img src="~/images/Logo.png" width="100px" height="100px" alt="Logo principal" />

					<!-- Logo derecho -->
					<img src="~/images/super-transp-logo.png" width="150px" height="150px" alt="Logo SuperTransp" />
				</div>
			</div>
			<!-- Nav -->
			<nav>
				<ul>
					<li><a href="#menu">Menu</a></li>
				</ul>
			</nav>
		</header>

		<!-- Menu -->
		<nav id="menu">
			<h2>Menu</h2>
			<ul>
				<li>@Html.ActionLink("Salir", "Login", "Security")</li>
			</ul>
		</nav>

		<!-- Main -->
		<div id="main">
			@* ******* Maintenance Message ************ *@
			@if (ViewBag.MaintenanceMessage != null)
			{
				<div id="modalMaintenanceMessage" class="modal" style="display:none;">
					<div class="modal-content">
						<span class="close" onclick="$('#modalMaintenanceMessage').fadeOut();">&times;</span>
						<h3>Aviso del sistema</h3>
						<p>@ViewBag.MaintenanceMessage</p>
						<div style="text-align:right;">
							<button onclick="$('#modalMaintenanceMessage').fadeOut();" class="btn-align-right">Entendido</button>
						</div>
					</div>
				</div>

				<script>
					document.addEventListener("DOMContentLoaded", function () {
						$("#modalMaintenanceMessage").fadeIn();
					});
				</script>
			}
			@* ******* Maintenance Message ************ *@
			<div class="inner">
				<header>
					<h1>Hola @ViewBag.EmployeeName bienvenid@@ al Sistema Supervisión de Organizaciones de Transporte Público, selecciona que deseas hacer:</h1>
				</header>
				<section class="tiles">
					@{
						foreach (var item in ViewBag.ModulesInGroup)
						{
							if (ViewBag.SecurityGroupId == 1 || item.SecurityModuleId == 1)
							{
								<article class="style3">
									<span class="image">
										<img src="~/images/image7.jpg" alt="" />
									</span>
									@Html.ActionLink("Organizaciones de Transporte", "Index", "PublicTransportGroup")
								</article>
							}
							if (ViewBag.SecurityGroupId == 1 || item.SecurityModuleId == 2)
							{
								<article class="style4">
									<span class="image">
										<img src="~/images/image8.jpg" alt="" />
									</span>
									@Html.ActionLink("Socios/Transportistas", "Index", "Driver")
								</article>
							}
							if (ViewBag.SecurityGroupId == 1 || item.SecurityModuleId == 3)
							{
								<article class="style1">
									<span class="image">
										<img src="~/images/image3.jpg" alt="" />
									</span>
									@Html.ActionLink("Supervisiones", "Index", "Supervision")
								</article>
							}
							if (ViewBag.SecurityGroupId == 1 || item.SecurityModuleId == 4)
							{
								<article class="style2">
									<span class="image">
										<img src="~/images/image4.jpg" alt="" />
									</span>
									@Html.ActionLink("Reportes/Consultas", "Index", "Reports")
								</article>
							}
							if (ViewBag.SecurityGroupId == 1 || item.SecurityModuleId == 5)
							{
								<article class="style5">
									<span class="image">
										<img src="~/images/image5.jpg" alt="" />
									</span>
									@Html.ActionLink("Ajustes", "Index", "Settings")
								</article>
							}

							if (ViewBag.SecurityGroupId == 1)
							{
								break;
							}
						}
						<article class="style6">
							<span class="image">
								<img src="~/images/image9.jpg" alt="" />
							</span>
							@Html.ActionLink("Cambiar Clave", "ChangePassword", "Security")
						</article>
					}
				</section>
			</div>
			<br />
			<label style="text-align:center">
				Sistema para la Supervisión de Organizaciones de Transporte
				<br />Diseñado y Desarrollado por la División de Desarrollo de Software - Gerencia de Tecnología de la Información &copy; @DateTime.Now.Year
			</label>
			<hr />
		</div>
	</div>

	<!-- Scripts -->
	<script src="~/assets/js/jquery.min.js"></script>
	<script src="~/assets/js/browser.min.js"></script>
	<script src="~/assets/js/breakpoints.min.js"></script>
	<script src="~/assets/js/util.js"></script>
	<script src="~/assets/js/main.js"></script>
</body>
</html>